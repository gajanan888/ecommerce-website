# NPM Configuration
# Ensures consistent package installations across team

# Use lock file for deterministic installs
legacy-peer-deps=true

# Strict SSL verification (set to false only for development behind proxies)
strict-ssl=true

# Increase timeout for slower networks
fetch-timeout=60000

# Use progress bar
progress=true

# Save exact versions
save-exact=false

# Allow running scripts
ignore-scripts=false
